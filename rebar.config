{erl_opts, [warnings_as_errors,
	    {platform_define, "^2[0-3]{1}", fsm_deprecated},
            {platform_define, "^1[7-8]{1}", old_rand},
            {platform_define, "^R", old_rand},
            {platform_define, "^R", no_sync}]}.

{profiles,
 [{eqc, [{erl_opts, [debug_info,  {parse_transform, eqc_cover}]},
    
    {extra_src_dirs, ["test"]},
    {plugins, [rebar_eqc]}]}
 ]}.

